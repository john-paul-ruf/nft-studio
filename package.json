{
  "name": "nft-studio",
  "productName": "NFT Studio",
  "version": "0.0.1",
  "description": "A front end for my-nft-gen",
  "type": "module",
  "main": "main.js",
  "scripts": {
    "test": "node tests/the-one-runner-to-rule-them-all.js",
    "test:all": "node tests/the-one-runner-to-rule-them-all.js",
    "test:integration": "node tests/the-one-runner-to-rule-them-all.js integration",
    "test:system": "node tests/the-one-runner-to-rule-them-all.js system",
    "test:unit": "node tests/the-one-runner-to-rule-them-all.js unit",
    "test:services": "node tests/the-one-runner-to-rule-them-all.js service",
    "test:file": "node tests/the-one-runner-to-rule-them-all.js file",
    "test:dependency": "node tests/the-one-runner-to-rule-them-all.js dependency",
    "test:workflow": "node tests/the-one-runner-to-rule-them-all.js workflow",
    "test:coverage": "node tests/the-one-runner-to-rule-them-all.js",
    "start": "webpack && npm run copy:html && electron .",
    "start:dev": "webpack --mode=development && npm run copy:html && electron .",
    "dev": "webpack --watch",
    "build": "webpack --mode=production && npm run copy:html",
    "copy:html": "cp dist/index.html dist/index.html 2>/dev/null || cp index.template.html dist/index.html && cp -r icons dist/ 2>/dev/null || true",
    "electron": "electron .",
    "rebuild": "electron-rebuild -f -w canvas && electron-rebuild -f -w sharp",
    "clean:start": "rm -rf dist/ && webpack && npm run copy:html && electron .",
    "clean:preferences": "rm -f \"$HOME/Library/Application Support/nft-studio/user-preferences.json\"",
    "package": "npm run build && electron-builder",
    "package:mac": "npm run build && electron-builder --mac",
    "package:win": "npm run build && electron-builder --win",
    "package:linux": "npm run build && electron-builder --linux",
    "dist": "npm run build && electron-builder --publish=never"
  },
  "author": "john.paul.ruf",
  "license": "MIT",
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/icons-material": "^7.3.2",
    "@mui/material": "^7.3.2",
    "@radix-ui/react-context-menu": "^2.2.16",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "my-nft-gen": "file:../my-nft-gen",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@babel/core": "^7.24.5",
    "@babel/preset-env": "^7.24.5",
    "@babel/preset-react": "^7.24.1",
    "@electron/rebuild": "^3.6.0",
    "babel-loader": "^9.1.3",
    "css-loader": "^6.8.1",
    "electron": "^30.0.6",
    "electron-builder": "^26.0.12",
    "style-loader": "^3.3.3",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4"
  },
  "build": {
    "appId": "com.nftstudio.app",
    "productName": "NFT Studio",
    "directories": {
      "output": "build"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js",
      "icons/**/*",
      "package.json",
      "src/commands/**/*",
      "!src/components/**/*",
      "src/container/**/*",
      "src/context/**/*",
      "src/core/**/*",
      "src/data/**/*",
      "!src/hooks/**/*",
      "src/interfaces",
      "src/main/**/*",
      "src/models/**/*",
      "!src/pages/**/*",
      "src/services/**/*",
      "src/utils/**/*",
      "!*.md"
    ],
    "extraResources": [
      {
        "from": "../my-nft-gen",
        "to": "my-nft-gen",
        "filter": ["**/*", "!node_modules"]
      }
    ],
    "mac": {
      "icon": "icons/icon.icns",
      "category": "public.app-category.graphics-design",
      "hardenedRuntime": true,
      "gatekeeperAssess": false
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "icon": "icons/icon.ico",
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "linux": {
      "icon": "icons/icon.png",
      "category": "Graphics",
      "target": "AppImage"
    },
    "asar": true,
    "asarUnpack": [
      "node_modules/ffmpeg-static/bin/${os}/${arch}/ffmpeg",
      "node_modules/ffmpeg-static/index.js",
      "node_modules/ffmpeg-static/package.json",
      "**/node_modules/sharp/**/*",
      "**/node_modules/@img/**/*",
      "**/node_modules/canvas/**/*"
    ]
  }
}

