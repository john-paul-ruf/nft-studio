{
  "name": "nft-studio",
  "productName": "NFT Studio",
  "version": "0.0.1",
  "description": "A front end for my-nft-gen",
  "type": "module",
  "main": "main.js",
  "scripts": {
    "test": "node tests/the-one-runner-to-rule-them-all.js",
    "test:all": "node tests/the-one-runner-to-rule-them-all.js",
    "test:integration": "node tests/the-one-runner-to-rule-them-all.js integration",
    "test:system": "node tests/the-one-runner-to-rule-them-all.js system",
    "test:unit": "node tests/the-one-runner-to-rule-them-all.js unit",
    "test:services": "node tests/the-one-runner-to-rule-them-all.js service",
    "test:file": "node tests/the-one-runner-to-rule-them-all.js file",
    "test:dependency": "node tests/the-one-runner-to-rule-them-all.js dependency",
    "test:workflow": "node tests/the-one-runner-to-rule-them-all.js workflow",
    "test:coverage": "node tests/the-one-runner-to-rule-them-all.js",
    "start": "NODE_PATH=./node_modules webpack && npm run copy:assets && NODE_PATH=./node_modules electron .",
    "start:dev": "NODE_PATH=./node_modules webpack --mode=development && npm run copy:assets && NODE_PATH=./node_modules electron .",
    "dev": "webpack --watch",
    "build": "webpack --mode=production && npm run copy:assets",
    "copy:assets": "node scripts/copy-assets.js",
    "copy:html": "node scripts/copy-assets.js",
    "electron": "electron .",
    "rebuild": "electron-rebuild -f -w canvas && electron-rebuild -f -w sharp",
    "clean:start": "rm -rf dist/ && NODE_PATH=./node_modules webpack && npm run copy:assets && NODE_PATH=./node_modules electron .",
    "clean:preferences": "node scripts/clean-preferences.js",
    "generate-icons": "node scripts/generate-icons.js",
    "package": "npm run build && electron-builder --mac --win --linux",
    "package:mac": "npm run build && electron-builder --mac",
    "package:mac:x64": "npm run build && electron-builder --mac -c.mac.target=dmg -c.mac.target=zip -c.mac.artifactName='${productName}-${version}-x64.${ext}'",
    "package:mac:arm64": "npm run build && electron-builder --mac -c.mac.target=dmg -c.mac.target=zip -c.mac.artifactName='${productName}-${version}-arm64.${ext}'",
    "package:mac:universal": "npm run build && electron-builder --mac -c.mac.target=dmg -c.mac.target=zip -c.mac.artifactName='${productName}-${version}-universal.${ext}'",
    "package:win": "npm run build && electron-builder --win",
    "package:linux": "npm run build && electron-builder --linux",
    "dist": "npm run build && electron-builder --publish=never",
    "verify:build": "node scripts/verify-build.js",
    "test:builds": "node scripts/test-builds.js",
    "test:plugins": "node scripts/test-plugin-loading.js",
    "test:plugins:prod": "node scripts/test-plugin-loading.js --production",
    "test:ffmpeg": "electron scripts/test-ffmpeg-integration.js",
    "test:ffmpeg:paths": "node scripts/test-ffmpeg-paths.js",
    "test:ffmpeg:prod": "node scripts/test-production-paths.js"
  },
  "author": "john.paul.ruf",
  "license": "MIT",
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/icons-material": "^7.3.2",
    "@mui/material": "^7.3.2",
    "@radix-ui/react-context-menu": "^2.2.16",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "my-nft-gen": "1.6.9",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "sharp": "^0.33.1"
  },
  "devDependencies": {
    "@babel/core": "^7.24.5",
    "@babel/preset-env": "^7.24.5",
    "@babel/preset-react": "^7.24.1",
    "@electron/rebuild": "^3.6.0",
    "babel-loader": "^9.1.3",
    "css-loader": "^6.8.1",
    "electron": "^30.0.6",
    "electron-builder": "^26.0.12",
    "electron-icon-builder": "^2.0.1",
    "style-loader": "^3.3.3",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4"
  },
  "build": {
    "appId": "com.nftstudio.app",
    "productName": "NFT Studio",
    "directories": {
      "output": "build"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js",
      "icons/**/*",
      "package.json",
      "src/commands/**/*",
      "!src/components/**/*",
      "src/container/**/*",
      "src/context/**/*",
      "src/core/**/*",
      "src/data/**/*",
      "src/effects/**/*",
      "!src/hooks/**/*",
      "src/interfaces",
      "src/main/**/*",
      "src/models/**/*",
      "!src/pages/**/*",
      "src/services/**/*",
      "src/utils/**/*",
      "!*.md"
    ],
    "mac": {
      "icon": "icons/icon.icns",
      "category": "public.app-category.graphics-design",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "dmg": {
      "title": "NFT Studio Installer",
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "icon": "icons/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "icons/icon.ico",
      "uninstallerIcon": "icons/icon.ico",
      "installerHeaderIcon": "icons/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "linux": {
      "icon": "icons",
      "category": "Graphics",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "maintainer": "john.paul.ruf",
      "synopsis": "NFT creation and editing studio",
      "description": "A graphical interface for creating, editing, and rendering NFT projects"
    },
    "asar": true,
    "asarUnpack": [
      "**/node_modules/sharp/**/*",
      "**/node_modules/@img/**/*",
      "**/node_modules/canvas/**/*",
      "**/node_modules/my-nft-gen/**/*",
      "**/node_modules/ffmpeg-ffprobe-static/**/*"
    ],
    "compression": "maximum",
    "npmRebuild": true,
    "nodeGypRebuild": false
  }
}
